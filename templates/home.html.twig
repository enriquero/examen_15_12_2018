{% extends "base.html.twig" %}  {# importo el template base #}

{# completo los bloques definidos en el template base#}

{% block title %}Home{% endblock %}
{% block head %}

{{ parent() }}

{% endblock %}

{% block body %}

{% block header %}
<div>
{% if usuario_logeado %}
    <a href="./index.php">Home</a> || 
    <a href="./index.php?action=mensaje_seguidos">Mensajes de seguidos</a> || 
    <a href="./index.php?action=mensaje_list">Mensajes publicos</a> || 
    <a href="./index.php?action=mensaje_add">Agregar un mensaje</a> || 
    <label>{{ usuario_logeado.nombre }} {{ usuario_logeado.apellido }}</label> || 
    <a href="./index.php?action=logout">Salir</a>
{% else %}
    <label>Ingresa para acceder a mas funcionalidades</label>
{% endif %}
</div>
{% endblock %}

{% if not usuario_logeado %}
<h1>Login</h1>
<form action="./index.php?action=login" method="POST">
    <label>Usuario:</label>
    <input type="text" name="usuario" placeholder="Ingrese su usuario">
    <label>Contraseña:</label>
    <input type="text" name="password" placeholder="Ingrese su Contraseña">
    <input type="submit" value="Ingresar">
</form>
{% endif %}

{% endblock %}